---
import Layout from '@/layouts/Layout.astro'
import Navigation from '@/components/Navigation.astro'
import Hero from '@/components/Hero.astro'
import ExperienceCard from '@/components/ExperienceCard.astro'
import ProjectCard from '@/components/ProjectCard.astro'
import Footer from '@/components/Footer.astro'
import { projects } from '@/data/projects'
import Technologies from '@/components/Technologies.astro'
---

<Layout title='Portfolio de Luis Alberto - Desarrollador Frontend'>
	<Navigation />

	<main class='relative z-10 container mx-auto px-4 py-8'>
		<Hero />

		<!-- Experience Section -->
		<ExperienceCard />

		<!-- Projects Section -->
		<section id='projects' class='min-h-screen dark:bg-transparent p-8'>
			<div class='max-w-4xl mx-auto'>
				<h2 class='text-3xl font-bold mb-8 dark:text-white'>Proyectos</h2>
				<div class='grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6'>
					{projects.map((project) => <ProjectCard {...project} />)}
				</div>
			</div>
		</section>
		<!-- Technologies & Quote -->
		<Technologies />
		<!-- Footer -->
		<Footer />
	</main>
</Layout>
