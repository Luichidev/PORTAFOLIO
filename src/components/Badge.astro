---
export interface Props {
	text: string
}

const { text } = Astro.props
---

<div class='tech-pill flex items-center px-4 py-2 rounded-full text-sm text-gray-600 dark:text-white bg-gray-200/50 dark:bg-white/10 m-2 gap-3 md:gap-3 border-1 border-gray-200'>
	<img src={`/svg/${text}.svg`} alt={text} width='30' height='30' loading='lazy' class='h-7 w-auto object-contain transition-transform group-hover:scale-110 opacity-60' />
	<span>{text}</span>
</div>

<style>
	.tech-pill {
		animation: float 3s ease-in-out infinite;
	}

	.tech-pill:nth-child(1) {
		animation-delay: 100ms;
	}

	.tech-pill:nth-child(2) {
		animation-delay: 200ms;
	}

	.tech-pill:nth-child(3) {
		animation-delay: 300ms;
	}

	.tech-pill:nth-child(4) {
		animation-delay: 400ms;
	}

	.tech-pill:nth-child(5) {
		animation-delay: 500ms;
	}

	.tech-pill:nth-child(6) {
		animation-delay: 500ms;
	}

	.tech-pill:nth-child(7) {
		animation-delay: 400ms;
	}

	@keyframes float {
		0%,
		100% {
			transform: translateY(0px);
		}
		50% {
			transform: translateY(-10px);
		}
	}
</style>
