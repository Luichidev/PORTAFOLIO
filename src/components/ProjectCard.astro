---
import { ArrowUpRight } from 'lucide-astro'

interface Props {
	title: string
	description: string
	image: string
	link: string
}

const { title, description, image, link } = Astro.props
---

<a href={link} target='_blank' rel='noopener noreferrer' class='project-card group relative bg-white aspect-square overflow-hidden rounded-2xl transition-all duration-300 hover:scale-105 hover:shadow-xl'>
	<img src={image || '/placeholder.svg'} alt={title} class='h-full w-full object-cover transition-transform duration-300 group-hover:scale-110' />

	<!-- Botón flecha -->
	<div class='absolute top-4 right-4 p-2 rounded-full bg-white/20 backdrop-blur-sm opacity-0 transform translate-y-2 transition-all duration-300 group-hover:opacity-100 group-hover:translate-y-0'>
		<ArrowUpRight class='w-5 h-5 text-black' />
	</div>

	<!-- Contenedor de la descripción con efecto glassmorphism -->
	<div class='absolute bottom-0 left-0 right-0'>
		<!-- Fondo con blur -->
		<div class='absolute inset-0 bg-black/30 backdrop-blur-xs transition-all duration-300 group-hover:bg-black/50'></div>

		<!-- Contenido -->
		<div class='relative py-2 px-4'>
			<h3 class='text-xl font-semibold mb-2 text-gray-300 dark:text-white'>{title}</h3>
			<p class='text-gray-300 dark:text-gray-400 text-sm line-clamp-3'>{description}</p>
		</div>
	</div>
</a>

<style>
	.project-card:hover img {
		filter: brightness(1.1);
	}
</style>
